@model Tenant_App.Models.DataObjects.Account.RegPaymentDto

@{
    ViewData["Title"] = ViewBag.ProjectTitle + "::  " + "Property";

    Layout = "~/Views/Shared/_Secured.cshtml";
}
@* 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script> *@

<div class="container-fluid content-top-gap">

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb my-breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "" })">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Properties", new { area = "" })">Hostel</a></li>
            <li class="breadcrumb-item active" aria-current="page">Make payment</li>
        </ol>
    </nav>

    <div class="cards__heading">
        <h3>Payment details</h3>
    </div>

    <div class="card card_border p-lg-5 p-3 mb-4">
        <div class="card-body py-3 p-0">
            @* <div>
                <button onclick="Create()" role="button" data-toggle="modal" data-target="#centralModalInfo" id="addDeptModalOpen" class="btn btn-primary btn-style mt-4">
                    <i class="fa-solid fa-plus"></i> Add Hostel
                </button>
            </div> *@
            <div class="row">
                <div>
                    <a href="@Url.Action("Index", "Properties", new { area = "" })"><i class="fa-solid fa-arrow-left"></i> Go Back</a>
                </div>
                <br />

                <section class="forms">
                    <div class="card card_border py-2 mb-4">
                        <div class="card-body">
                            <h5>Confirm your details before making registartion payment</h5>
                            <hr />
                            <form asp-action="InitiateAndConfirmPayment" asp-controller="Payment" id="msform" method="post">
                                <input name="userId" value="@Model.UserId" type="hidden" />
                                
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="inputEmail4" class="input__label">Full name:</label>
                                        <input type="text" value="@Model.FullName" class="form-control input-style" readonly>
                                    </div>
                                    
                                </div>
                                <div class="form-row">
                                    
                                    <div class="form-group col-md-4">
                                        <label for="inputEmail4" class="input__label">Email:</label>
                                        <input type="email" value="@Model.Email" class="form-control input-style" readonly>
                                    </div>
                                    
                                </div>
                                <div class="form-row">
                                    
                                    <div class="form-group col-md-4">
                                        <label for="inputEmail4" class="input__label">Amount</label>
                                        <input type="text" value="@Model.Amount" class="form-control input-style" id="inputEmail4" readonly>
                                    </div>
                                </div>
                                <input name="amount" value="@Model.Amount" type="hidden" />
                                <button type="submit" class="btn btn-primary btn-style mt-4">Make Payment</button>
                            </form>
                            
                            
                        </div>
                    </div>
                </section>
				
            </div>
        </div>
    </div>
</div>


<script>
	function goBack() {
		window.location.href = "/Home/Index";
	}
</script>