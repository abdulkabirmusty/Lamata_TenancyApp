    <script> 
        // Set the initial active index
        let activeIndex = 0;

        // Get all the carousel items
        const carouselItems = document.querySelectorAll('.feedbackDiv');

        // Show the first carousel item by default
        carouselItems[0].classList.add('active');

        // Get the next and previous buttons
        const nextButton = document.getElementById('next');
        const prevButton = document.getElementById('prev');

        // Add event listeners to the buttons
        nextButton.addEventListener('click', showNextItem);
        prevButton.addEventListener('click', showPrevItem);

        // Function to show the next item in the carousel
        function showNextItem() {
            // Hide the current active item
            carouselItems[activeIndex].classList.remove('active');
            // Increment the active index
            activeIndex++;
            // Wrap around to the beginning if necessary
            if (activeIndex >= carouselItems.length) {
                activeIndex = 0;
            }
            // Show the new active item
            carouselItems[activeIndex].classList.add('active');
        }

        // Function to show the previous item in the carousel
        function showPrevItem() {
            // Hide the current active item
            carouselItems[activeIndex].classList.remove('active');
            // Decrement the active index
            activeIndex--;
            // Wrap around to the end if necessary
            if (activeIndex < 0) {
                activeIndex = carouselItems.length - 1;
            }
            // Show the new active item
            carouselItems[activeIndex].classList.add('active');
        }


        // function you toggle nav bar on phone
        const NavBarsToggler = document.querySelector('.indexpagenavtoggle')
        const navbar = document.querySelector('.navigation');
        const navbarItems = document.querySelectorAll('.indexnavigationitem')

        NavBarsToggler.addEventListener('click', toggleMobileNavbar)
        function toggleMobileNavbar() {
            console.log('clicked')
            if (navbar.classList == "navigation") {
                navbar.classList.remove("navigation");
                navbar.classList.add("navigationactive");
            } else {
                navbar.classList.remove("navigationactive");
                navbar.classList.add("navigation");
            }
        }

        navbarItems.forEach(navItem => {
            navItem.addEventListener('click', toggleMobileNavbar)
        })

    </script>

