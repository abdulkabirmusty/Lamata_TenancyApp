@model IEnumerable<Tenant_App.Models.DTOs.ServiceChargeDto>

@{
    ViewData["Title"] = "Service Charges";
    Layout = "~/Views/Shared/_Secured.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/vanilla-dataTables.min.css">
<script src="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/vanilla-dataTables.min.js"></script>

<style>
    .dropdown-menus {
        display: none;
        position: absolute;
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 0rem;
        margin: 0rem;
        list-style: none;
        z-index: 999;
        min-width: 100%;
    }

    .dropdowns {
        width: 11.5vw;
        height: 0.5vw;
        position: relative;
        display: inline-block;
    }

    .dropdown-menus li {
        padding: 3px;
        cursor: pointer;
    }

        .dropdown-menus li:hover {
            background-color: #f4f4f4;
        }
</style>

<div class="container-fluid content-top-gap">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb my-breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "" })">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ServiceCharge", new { area = "" })">Setup</a></li>
            <li class="breadcrumb-item active" aria-current="page">Manage Service Charges</li>
        </ol>
    </nav>

    <div class="cards__heading">
        <h3>Manage Service Charges</h3>
    </div>

    <div class="card card_border p-lg-5 p-3 mb-4">
        <div class="card-body py-3 p-0">
            <div>
                <button onclick="openCreateModal()" role="button" data-toggle="modal" data-target="#createServiceChargeModal" class="btn btn-primary btn-style mt-4">
                    <i class="fa-solid fa-plus"></i> Add Service Charge
                </button>
            </div>
            <br /><br />
            <div class="row">
                <div class="table-responsive">
                    <table data-ordering="false" id="serviceChargeTable" class="table" style="width:100%; background-color: white;">
                        <thead>
                            <tr>
                                <th class="sn">S/N</th>
                                <th>Service Description</th>
                                <th>Property Type</th>
                                <th>Frequency</th>
                                <th>Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNo = 0;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(rowNo += 1)</td>
                                    <td>@item.ServiceDescription</td>
                                    <td>@item.PropertyName</td>
                                    <td>@item.FrequencyDescription</td>
                                    <td>@item.Amount</td>
                                    <td>
                                        <div class="dropdowns">
                                            <i class="fa-solid fa-ellipsis-vertical"></i>
                                            <ul class="dropdown-menus">
                                                <li data-value="edit" data-id="@item.Id" role="button" data-toggle="modal" data-target="#createServiceChargeModal" class="editAction" onclick="editServiceCharge(@item.Id)">
                                                    <i class="fa fa-edit"></i> Edit
                                                </li>
                                                <li data-value="delete" data-id="@item.Id" role="button" data-toggle="modal" data-target="#deleteServiceChargeModal" class="deleteAction" onclick="deleteServiceCharge(@item.Id)">
                                                    <i class="fa fa-trash"></i> Delete
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Create Service Charge -->
<div class="modal fade" id="createServiceChargeModal" tabindex="-1" role="dialog" aria-labelledby="createServiceChargeLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createServiceChargeLabel">Add Service Charge</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_AddServiceCharge", new Tenant_App.Models.DTOs.ServiceChargeDto())
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

