@model Tenant_App.Models.DTOs.ServiceChargeDto

<form asp-action="Create" asp-controller="ServiceCharge" method="post">
    <div class="form-group">
        <label for="ServiceDesc">Service Description</label>
        <input type="text" class="form-control" id="ServiceDesc" name="ServiceDescription" required />
    </div>

    <div class="form-group">
        <label for="PropertyType">Property Type</label>
        <select class="form-control" id="PropertyType" name="PropertyTypeId">
            <option value="">Select Property Type</option>
            @{
                var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem>;
            }
            @if (propertyTypes != null && propertyTypes.Any())
            {
                foreach (var property in propertyTypes)
                {
                    <option value="@property.Value">@property.Text</option>
                }
            }
            else
            {
                <option value="">No Property Types Available</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="FrequencyId">Frequency</label>
        <select class="form-control" id="FrequencyId" name="FrequencyId">
            <option value="">Select Frequency</option>
            @{
                var frequencies = ViewBag.Frequencies as List<SelectListItem>;
            }
            @if (frequencies != null && frequencies.Any())
            {
                foreach (var frequency in frequencies)
                {
                    <option value="@frequency.Value">@frequency.Text</option>
                }
            }
            else
            {
                <option value="">No Frequencies Available</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ServiceTypeId">Service Type</label>
        <select class="form-control" id="ServiceTypeId" name="ServiceTypeId">
            <option value="">Select Service Type</option>
            @{
                var serviceTypes = ViewBag.ServiceTypes as List<SelectListItem>;
            }
            @if (serviceTypes != null && serviceTypes.Any())
            {
                foreach (var serviceType in serviceTypes)
                {
                    <option value="@serviceType.Value">@serviceType.Text</option>
                }
            }
            else
            {
                <option value="">No Service Types Available</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Amount">Amount</label>
        <input type="number" class="form-control" id="Amount" name="Amount" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Service Charge</button>
</form>
