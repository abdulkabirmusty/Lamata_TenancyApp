@model Tenant_App.Models.DTOs.FrequencyDto

@{
    ViewData["Title"] = "Delete Frequency";
    Layout = "~/Views/Shared/_Secured.cshtml";
}

<h2>Delete Frequency</h2>

<h3>Are you sure you want to delete this frequency?</h3>
<div>
    <h4>Frequency</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.FrequencyDesc
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToShortDateString()
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
