@model Tenant_App.Models.DTOs.FrequencyDto

<div class="modal-header">
    <h5 class="modal-title" id="createFrequencyLabel">Add Frequency</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="FrequencyDesc">Frequency Description</label>
            <input type="text" class="form-control" id="FrequencyDesc" name="FrequencyDesc" value="@Model.FrequencyDesc" required />
        </div>

        <div class="form-group">
            <label for="FrequencyType">Frequency Type</label>
            <select class="form-control" id="FrequencyType" name="FrequencyType" asp-for="FrequencyType" asp-items="ViewBag.FrequencyTypes">
            </select>
        </div>
        @*  <div class="form-group">
        <label for="CreatedDate">Created Date</label>
        <input type="date" class="form-control" id="CreatedDate" name="CreatedDate" value="@Model.CreatedDate.ToString("yyyy-MM-dd")" required />
        </div> *@
        <div class="form-check">
            <input type="hidden" name="IsActive" value="false" />
            <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") />
            <label class="form-check-label" for="IsActive">Is Active</label>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save Frequency</button>
        </div>
    </form>
</div>
